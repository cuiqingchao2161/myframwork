<?xml version="1.0" encoding="utf-8"?>
<com.cui.mvvmdemo.utils.GestureDetectorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_msg_fl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:clipChildren="false"
    android:clipToPadding="false">

    <com.cui.mvvmdemo.utils.ScaleRecycleView
        android:id="@+id/gesture_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp_20"
        tools:listitem="@android:layout/simple_list_item_checked"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layoutManager="LinearLayoutManager"/>

</com.cui.mvvmdemo.utils.GestureDetectorLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_type"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:scaleType="centerCrop"
        tools:src="@mipmap/ic_doc" />

    <LinearLayout
        android:id="@+id/layout_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingEnd="@dimen/dp_10"
            android:textColor="@color/file_picker_title"
            android:textSize="16sp"
            tools:text="名字" />

        <TextView
            android:id="@+id/tv_detail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="top"
            android:maxLines="1"
            android:paddingEnd="@dimen/dp_10"
            android:textColor="@color/file_picker_des"
            android:textSize="14sp"
            tools:text="类型：txt  大小：1024KB" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divide_height_size"
            android:background="@color/color_list_divider" />
    </LinearLayout>
</LinearLayout>
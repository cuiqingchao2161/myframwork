<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable name="newsItem"
                  type="com.zx.mvvmdemo.bean.NewsData.ResultsBean"/>
        <variable name="callback"
                  type="com.zx.mvvmdemo.viewmodel.NewsItemClickCallback"/>
    </data>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:onClick="@{() ->  callback.onClick(newsItem)}"
        android:orientation="horizontal"
        android:minHeight="90dp"
        android:paddingTop="4dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="16dp"
        >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_vertical|left"
                android:gravity="left|center_vertical"
                android:padding="8dp"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:maxLines="2"
                android:text="@{newsItem.desc}"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="right|center_vertical"
                android:layout_gravity="bottom|right"
                android:textColor="#ddccaa"
                android:textSize="12sp"
                android:singleLine="true"
                android:padding="4dp"
                android:text="@{newsItem.who}"/>
    </android.support.v7.widget.CardView>
</layout>
